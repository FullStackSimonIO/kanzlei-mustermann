// 2. Definiere Hero-Typen basierend auf Struktur
function categorizeHeroType(structure) {
  // Typ-Erkennung basierend auf Elementen
  if (structure.inputs.length > 0) {
    return 'heroWithForm'
  }
  if (structure.images.length > 3) {
    return 'heroWithGallery'
  }
  if (structure.images.length === 2) {
    return 'heroSplitScreen'
  }
  if (structure.lists.length > 0) {
    return 'heroWithFeatures'
  }
  if (structure.videos.length > 0) {
    return 'heroWithVideo'
  }
  if (structure.images.length === 1) {
    return 'heroWithImage'
  }
  return 'heroSimple'
}

// Erstelle Hero-Definitionen
const heroDefinitions = heroAnalysis.map(hero => {
  const heroType = categorizeHeroType(hero.structure)
  
  return {
    name: hero.name,
    slug: generateSlug(hero.name), // z.B. "Header1", "Header2"
    type: heroType,
    structure: hero.structure,
    relumeTemplate: hero.relumeTemplate,
