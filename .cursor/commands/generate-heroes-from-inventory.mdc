${heroDefinitions.map(hero => 
  `import { ${hero.slug} } from './${hero.slug}'`
).join('\n')}

interface RenderHeroProps {
  hero: Hero
}

export const RenderHero: React.FC<RenderHeroProps> = ({ hero }) => {
  const { type } = hero || {}
  
  if (!type || type === 'none') {
    return null
  }
  
  // Mapping von Hero-Typ zu Komponente
  const heroComponents = {
${heroDefinitions.map(hero => 
    `    '${hero.slug}': ${hero.slug},`
).join('\n')}
  }
  
  const HeroComponent = heroComponents[type]
  
  if (!HeroComponent) {
    console.warn(\`Hero type "\${type}" not found\`)
    return null
  }
  
  return <HeroComponent hero={hero} />
}
`

